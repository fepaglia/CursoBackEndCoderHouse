<div>
   <header>
        <h1>Product manager</h1>
        <button><a href="/products">Volver</a></button>
    </header>

    <div class="container">
        {{#if product}}
            <div class="prodBox">
                <div><span>ID: </span><p>{{_id}}</p></div>
                <div><span>Nombre: </span><p>{{title}}</p></div>
                <div><span>Precio: </span><p>$ {{price}}</p></div>
                <div><span>Descripcion: </span><p>{{description}}</p></div>
                <div><span>Thumbnails: </span><p>{{thumbnails}}</p></div>
                <div><span>Status: </span><p>{{status}}</p></div>
                <div><span>Stock: </span><p>{{stock}}</p></div>

                <button>Agregar al Carrito</button>
                
            </div>
        {{else}}
            <div class="prodBox">
                <h2>El Producto que estas buscando no existe, o no se encuentra disponible en este momento. Intentelo mas tarde.</h2>
            </div>
        {{/if}}
    </div>
</div>  