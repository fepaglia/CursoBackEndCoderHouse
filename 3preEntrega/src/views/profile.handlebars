<div>
    <nav>
        <h1>Perfil de: {{user.first_name}}</h1>
        <button><a href="/api/sessions/logout">Salir de la sesion</a></button>
        <button><a href="/products">Atras</a></button>
        <button class="purchase" data-cart="{{cartsCode}}">Fianlizar la compra</a></button>
    </nav>
    <div>
        <p>Codigo del Carrito Actual: {{cartsCode}}</p>

       
        {{#if listOfProducts}}
            {{#each listOfProducts}}
                <div> 
                    <div><span>ID: </span><p>{{{pId._id}}}</p></div>
                    <div><span>Nombre: </span><p>{{pId.title}}</p></div>
                    <div><span>Precio: </span><p>{{{pId.price}}}</p></div>
                    <div><span>Cantidad: </span><p>{{quantity}}</p></div>
                </div>
            {{/each}}
        {{else}}
            <div>
                <p>EL carrito se encuentra vacio</p>
                <a href="/products">Ver Productos</a>
            </div>
        {{/if}}
    </div>
</div>
<script src="/js/profile.js"></script>