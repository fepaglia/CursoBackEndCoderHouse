<div>
    <header>
        <h1>Product manager</h1>
        <p>Bienvenido {{user.first_name}}!</p>
        <nav>
            <ul>
                <li><button><a href="/profile">Mi Perfil</a></button></li>
                <li><button><a href="/carts/{{cart}}">Carrito</a></button></li>
                <li><button><a href="/api/sessions/logout">Salir de la sesion</a></button></li>
            </ul>
        </nav>
        
        
    </header>

    <div class="container">
        {{#if products }}
            {{#each products}}
            <div class="prodBox">

                <div><p>{{title}}</p></div>
                <div><span>Precio: </span><p>{{price}}</p></div>
                <div><span>Status: </span><p>{{status}}</p></div>
                <div><span>Stock: </span><p>{{stock}}</p></div>

                <button class="addToCart" data-cart="{{{../cart}}}" data-product-id="{{_id}}">Agregar al Carrito</button>
               
                <button><a href="/products/{{_id}}">Ver detalle</a></button>
            </div>  
            {{/each}}
        {{/if}}
    </div>
    <div>
        {{#if hasPrevPage}}
            <a href="/products?page={{prevPage}}"><button>Anterior</button></a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="/products?page={{nextPage}}"><button>Siguiente</button></a>
        {{/if}}
    </div>
</div>
<script src="/js/products.js"></script>